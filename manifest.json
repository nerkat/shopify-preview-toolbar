{
  "manifest_version": 3,
  "name": "SGA",
  "version": "1.0",
  "description": "SGA - dev helper extension",
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://*/*"
      ]
    }
  ],
  "action": {
    "default_popup": "settings.html"
  },
  "permissions": ["storage", "unlimitedStorage"]
}